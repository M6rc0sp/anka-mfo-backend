{
    "name": "@anka/backend",
    "version": "1.0.0",
    "description": "Anka MFO - Backend API",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "db:generate": "drizzle-kit generate:pg",
        "db:push": "drizzle-kit push:pg",
        "db:migrate": "node --loader tsx src/db/migrate.ts"
    },
    "dependencies": {
        "fastify": "^5.1.0",
        "@fastify/cors": "^11.0.0",
        "@fastify/helmet": "^13.0.0",
        "@fastify/swagger": "^9.0.0",
        "@fastify/swagger-ui": "^5.0.0",
        "zod": "^3.24.1",
        "drizzle-orm": "^0.35.0",
        "drizzle-kit": "^0.25.0",
        "pg": "^8.12.0",
        "dotenv": "^16.4.5",
        "pino": "^9.6.0",
        "pino-pretty": "^11.0.0"
    },
    "devDependencies": {
        "typescript": "^5.7.2",
        "@types/node": "^22.10.0",
        "@types/pg": "^8.13.0",
        "tsx": "^4.19.2",
        "vitest": "^3.0.0",
        "@vitest/ui": "^3.0.0",
        "@vitest/coverage-v8": "^3.0.0"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}